{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "target": "es5",
    "module": "es2015",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "types": [
      "jest",
      "webpack-env"
    ],
    "paths": {
      "experiments/lib/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}